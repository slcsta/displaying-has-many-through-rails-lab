<h2><%= @patient.name %></h2>
<p>
Appointments:
<ul>
  <% @patient.appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y" + ' at ' + "%H:%M") %></li>
    <li><%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></li>
  <% end %> 
</ul>